mpath="dist/opensips/modules/"

#if OPENSIPS_VER >= 210
loadmodule "proto_udp.so"
#define RTPP_UNFORCE() rtpproxy_unforce()
#else
#define RTPP_UNFORCE() unforce_rtp_proxy()
#endif
loadmodule "sl/sl.so"
loadmodule "tm/tm.so"
loadmodule "rr/rr.so"
loadmodule "maxfwd/maxfwd.so"
#if OPENSIPS_VER >= 210
## dialog is now required by the rtpproxy, not sure why, but OK
loadmodule "dialog/dialog.so"
#endif
loadmodule "rtpproxy/rtpproxy.so"
loadmodule "textops/textops.so"

modparam("rtpproxy", "rtpproxy_sock", RTPP_SOCK_TEST)

listen=udp:127.0.0.1:5060
##listen=udp:192.168.1.43:5060

route {
    ## initial sanity checks -- messages with
    ## max_forwards==0, or excessively long requests
    if (!mf_process_maxfwd_header("10")) {
        sl_send_reply("483","Too Many Hops");
        exit;
    };

    if (msg:len >=  2048 ) {
        sl_send_reply("513", "Message too big");
        exit;
    };

    ## shield us against retransmits
    if (!t_newtran()) {
        sl_reply_error();
        exit;
    };

    if (method == "INVITE") {
        if (rtpproxy_offer("r")) {
            t_on_reply("1");
            t_on_failure("1");
        };
    };

    if (method == "CANCEL" || method == "BYE") {
        RTPP_UNFORCE();
    };

    record_route();

    if (loose_route()) {
        t_relay();
        exit;
    };

    if (src_ip == "127.0.0.1" && src_port == 5061) {
        t_relay("udp:127.0.0.1:5062");
    } else {
        t_relay("udp:127.0.0.1:5061");
    };
    ##rtpproxy_stream2uac("ringback", "10");
    exit;
}

onreply_route[1]
{
    if (status=~"(183)|2[0-9][0-9]") {
        if(!search("^Content-Length:[ ]*0")) {
            rtpproxy_answer("r");
            ##rtpproxy_stream2uas("ringback", "10");
        };
    };
}

failure_route[1]
{

    RTPP_UNFORCE();
}
